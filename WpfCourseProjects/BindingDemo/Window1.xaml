<Window x:Class="BindingDemo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingDemo"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding FirstName, FallbackValue=42}" FontSize="30" HorizontalAlignment="Left" Margin="143,102,0,0" Width="412"/>
        <TextBlock Text="{Binding LastName, Mode=OneWay}" FontSize="30" HorizontalAlignment="Left" Margin="143,102,0,0" Width="412"/>
        <Button Height="73" Margin="20,50,20,0" Content="Button1" Click="ButtonBase_OnClick"/>
    </StackPanel>
</Window>
