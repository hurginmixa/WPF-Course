<Window x:Class="ResourceManaging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceManaging"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Window.Resources>
            <SolidColorBrush x:Key="BlueBrush" Color="LightBlue" />
        </Window.Resources>
    <Grid>
        <Button Width="50" Height="50" Background="Red" Margin="130, 0, 0 ,0"/>
        <Button Width="50" Height="50" Background="Green" Margin="-130, 0, 0 ,0"/>
        <Button Name="BlueButton" Width="50" Height="50" Background="{StaticResource BlueBrush}" Margin="0, 130, 0 ,0"/>
    </Grid>
</Window>
